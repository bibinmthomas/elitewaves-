<%- include('../partials/userHead') %>


  <form action="/admin/add-product" method="post" class="my-auto" style="height: 90vh;" enctype="multipart/form-data">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card bg-transparent" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add<span class="text-main-1">Product</span>
                  </p>

                  <form class="mx-1 mx-md-4">

                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">Game Name</label>
                        <input type="text" id="form3Example1c" class="form-control" name="gName" required />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example3c">Game Platform</label>
                        <input type="text" id="form3Example3c" class="form-control" name="gPlatform" required />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">Game Price</label>
                        <input type="number" id="form3Example1c" class="form-control" name="gPrice" required />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">Game Stock</label>
                        <input type="number" id="form3Example1c" class="form-control" name="stock" required />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4c">Game Description</label>
                        <input type="text" id="form3Example4c" class="form-control" name="gDescription" required />

                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example1c">Game Rating</label>
                        <input type="number" id="form3Example1c" class="form-control" name="gRating" max="5" required />

                      </div>
                    </div>

                    <script>

                    </script>
                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label  select-label" for="form3Example1c">Game Genre</label>
                        <select name="genre" class="form-control">
                          <option value="" disabled selected>Select a Genre</option>
                          <% if(category){ %>
                          <% for(let i=1;i <= category.length; i++){ %>
                            <option value="<%= category[i-1].name %>">
                              <%= category[i-1].name %>
                            </option>
                            <% } %>
                          <% }else{ %>
                            <h1>No Categories to add</h1>
                          <% } %>  
                        </select>
                      </div>
                    </div>


                    <div class="d-flex flex-row align-items-center mb-4">

                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4c">Game Image</label>
                        <input type="file" id="form3Example4c" class="form-control" name="gImage" required />

                      </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" value="Register" class="btn btn-primary btn-lg">Add Product</button>
                      <a href="/admin" class="btn btn-primary ml-2 btn-lg">Go Back</a>
                    </div>

                    <% if(typeof message !=='undefined' ){%>
                      <p style="color:green">
                        <%= message %>
                      </p>
                      <% } %>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </form>

  <%- include('../partials/userFooter') %>